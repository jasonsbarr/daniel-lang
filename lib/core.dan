(begin-module "core"

(defmacro unless (pred a b)
    `(if ~pred ~b ~a))

(defmacro or (left right)
    `(if ~left ~left ~right))

(defmacro and (left right)
    `(if ~left ~right false))

(define (not val)
    (if val false true))

(define (inc x) (+ x 1))

(define (dec x) (- x 1))

(provide unless)
(provide or)
(provide and)
(provide not)
(provide inc)
(provide dec))
